<form class="col s12" action="/api/add-user" method="POST">
    <div class="row page-label">
        <div class="col s12 l8 offset-l2">
            <div class="card ">
                <div class="card-tabs" style="padding:20px;">
                    <h4 class="light" style="padding:20px;">Add a User</h4>
                </div>
                <!--/card-tabs-->


                <div class="card-action">

                    <div class="row">
                        <div class="input-field col s12 l12">
                            <div class="row">
                                <div class="col s6">
                                    <input name="first_name" type="text" class="validate" placeholder="First Name">
                                </div>
                                <div class="col s6">
                                    <input name="last_name" type="text" class="validate" placeholder="Last Name">
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="input-field col s12 l12">
                            <div class="row">
                                <div class="col s6">
                                    <input name="email" type="text" class="validate" placeholder="Email">
                                </div>
                                <div class="col s6">
                                    <input name="password" type="password" class="validate" placeholder="Password">
                                </div>
                            </div>
                        </div>
                    </div>



                    <div class="row">
                        <div class="input-field col s12 l12">
                            <div class="row">
                                <div class="col s6">
                                    <input name="mobile" type="text" class="validate" placeholder="Mobile Phone">
                                </div>
                                <div class="col s6">
                                    <input name="empID" type="text" class="validate" placeholder="Employee Id">
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!--/card-action-->

                <div class="card-action">
                    <div class="row">
                        <div class="col s12 m12 l4">
                            <div class="card blue-grey lighten-2">
                                <div class="card-content white-text">
                                    <span class="card-title">Partner</span>

                                </div>
                                <div class="card-action">
                                    {{#each Partner}}
                                    <input name="PartnerId" type="radio" id="Partner{{this.id}}" value="{{this.id}}">
                                    <label style="color: #fff;" for="Partner{{this.id}}">{{this.location}}</label><br><br>                                    {{/each}}
                                </div>
                            </div>
                        </div>


                        <div class="col s12 m4">
                            <div class="card blue-grey lighten-2">
                                <div class="card-content white-text">
                                    <span class="card-title">Position Status</span>

                                </div>
                                <div class="card-action">
                                    {{#each Status}}
                                    <input name="StatusId" type="radio" id="Status{{this.id}}" value="{{this.id}}">
                                    <label style="color: #fff;" for="Status{{this.id}}">{{this.status}}</label><br><br>                                    {{/each}}
                                </div>
                            </div>
                        </div>

                        <div class="col s12 m4">
                            <div class="card blue-grey lighten-2">
                                <div class="card-content white-text">
                                    <span class="card-title">Special Access</span>

                                </div>
                                <div class="card-action">
                                    {{#each Group}}
                                    <input name="GroupId" type="radio" id="Group{{this.id}}" value="{{this.id}}">
                                    <label style="color: #fff;" for="Group{{this.id}}">{{this.userType}}</label><br><br>                                    {{/each}}
                                </div>
                            </div>
                        </div>


                    </div>

                </div>
                <!--/card-action-->
                <div class="row">
                    <center>
                    <div class="col s12 l12">

                        <div class="col s12 offset-12">
                            <center>
                            <button class="waves-effect waves-light btn" style="width: 69%;" type="Submit">Submit
                                <i class="material-icons right">send</i>
                            </button>
                            </center>
                        </div>
                        </div>
                    </center>
                </div>
                <br>
            </div>
            <!--/ card-->
        </div>
        <!--/col s12-->
    </div>
    <!--/page-level-->
</form>