<form class="col s12">
            <div class="row page-label">
                <div class="col s12 l8 offset-l2">
                    <h4>Add a User</h4>
                </div>
            </div>
            <!---------------------------------------------->
            <div class="row">
                <div class="input-field col s12 l8 offset-l2">
                    <div class="row">
                        <div class="col s6">
                            <input id="first_name" type="text" class="validate" placeholder="First Name">
                        </div>
                        <div class="col s6">
                            <input id="last_name" type="text" class="validate" placeholder="Last Name">
                        </div>
                    </div>
                </div>
            </div>
            <!---------------------------------------------->
            <div class="row">
                <div class="input-field col s12 l8 offset-l2">
                    <div class="row">
                        <div class="col s6">
                            <input id="email" type="text" class="validate" placeholder="Email">
                        </div>
                        <div class="col s6">
                            <input id="password" type="text" class="validate" placeholder="Password">
                        </div>
                    </div>
                </div>
            </div>
            <!---------------------------------------------->
             <div class="row">
                <div class="input-field col s12 l8 offset-l2">
                    <div class="row">
                        <div class="col s6">
                            <input id="mobile" type="text" class="validate" placeholder="Mobile Phone">
                        </div>
                        <div class="col s6">
                            <input id="empID" type="text" class="validate" placeholder="Employee Id">
                        </div>
                    </div>
                </div>
            </div>
            <!---------------------------------------------->
            <div class="input-field col s12 l8 offset-l2">
                <div class="row">
                    <div class="col s6">
                        <p>Partner</p>
                        {{#each Partner}}
                        <input name="PartnerId" type="radio" id="{{this.id}}">    
                        <label for="{{this.id}}">{{this.name}}</label><br><br>
                        {{/each}}   
                    </div>

                    <div class="col s6">
                        <p>Position Status</p>
                        {{#each Partner}}
                        <input name="StatusId" type="radio" id="{{this.id}}">    
                        <label for="{{this.id}}">{{this.name}}</label><br><br>
                        {{/each}} 
                    </div>

                    <div class="col s4">
                        <p>Special Access</p>
                        {{#each Partner}}
                        <input name="GroupId" type="radio" id="{{this.id}}">    
                        <label for="{{this.id}}">{{this.name}}</label><br><br>
                        {{/each}} 
                    </div>
                    
                </div>
                <div class="row"><br>
                    <a class="waves-effect waves-light btn" type="Submit">Submit</a>
                </div>
            </div>
        </form>