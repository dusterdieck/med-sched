

    <div class="row page-label">
        <div class="col s12 l8 offset-l2">
            <h4>Profile</h4>
            <div class="card large">
                <div class="card-content">
                    <span class="card-title activator greytext text-darken-3">{{user.first_name}} {{user.last_name}}<i class="material-icons right">more_vert</i></span>
                    <p>Email: {{user.email}}</p>
                    <p>Mobile: {{user.mobile}}</p>
                    <p>Employee Id: {{user.empID}}</p>
                    <p>Hospital: {{user.Partner.location}}</p>
                    <p>Call Status: {{user.Status.status}}</p>

                </div>
                <div class="card-reveal">
                    <span class="card-title activator greytext text-darken-3">Update Account Details<i class="material-icons right">close</i></span>
                    <form class="col s12" action="/account?_method=PUT" method="POST">
                    <div class="row">
                        <div class="col s6">
                            <input name="first_name" type="text" class="validate" value="{{user.first_name}}">
                        </div>
                        <div class="col s6">
                            <input name="last_name" type="text" class="validate" value="{{user.last_name}}">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s6">
                            <input name="email" type="email" class="validate" value="{{user.email}}">
                            <input name="id" type="hidden" value="{{user.id}}">
                        </div>
                        <div class="col s6">
                            <input name="mobile" type="tel" class="validate" value="{{user.mobile}}">
                            
                        </div>
                    </div>
                    <button class="waves-effect waves-light btn" type="Submit">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
