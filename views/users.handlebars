<div class="row page-label col l12 s12">

    <h4 class="light" style="padding:20px;">Contacts</h4>
    {{#if admin}} {{#each User}}
    <div class="col s12 m12 l6">
        <div class="card">
            <div class="card-content">


                <ul id="profile-page-about-feed" class="collection z-depth-1 light">
                    <li class="collection-item avatar" style="min-height: 69px;">
                        {{!--<img src="images/avatar.jpg" alt="" class="circle">--}}
                        <span class="card-title activator greytext text-darken-3">
                            <i class="material-icons circle  blue-grey ">perm_identity</i>

                    <span class="title" style="width:50%;"><h4 class="light">{{first_name}} {{last_name}}</h4></span>
                        <i class="material-icons right" style="position: relative; bottom: 54px;">mode_edit</i></span>

                    </li>
                    <li class="collection-item avatar" style="min-height: 69px;">
                        <i class="material-icons circle">email</i>
                        <span class="title">Email</span>
                        <p>
                            {{email}}
                        </p>

                    </li>
                    <li class="collection-item avatar" style="min-height: 69px;">
                        <i class="material-icons circle green">phone</i>
                        <span class="title">Mobile</span>
                        <p>{{mobile}}</p>
                    </li>
                    <li class="collection-item avatar" style="min-height: 69px;">
                        <i class="material-icons circle light-blue darken-3">info</i>
                        <span class="title">Employee Id: {{empID}}</span>
                        <br>
                        <span class="title">Hospital: {{location}}</span>
                        <br>
                        <a href="#!" class="secondary-content"><i class="material-icons"></i></a>
                        <span class="title">Call Status: {{Status.status}}</span>
                    </li>
                </ul>



            </div>
            <div class="card-reveal">
                <span class="card-title activator greytext text-darken-3">Update Account Details<i class="material-icons right">close</i></span>
                <form class="col s12" action="/account?_method=PUT" method="POST">
                    <div class="row">
                        <div class="col s6">
                            <input name="first_name" type="text" class="validate" value="{{first_name}}">
                        </div>
                        <div class="col s6">
                            <input name="last_name" type="text" class="validate" value="{{last_name}}">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s6">
                            <input name="email" type="email" class="validate" value="{{email}}">
                            <input name="id" type="hidden" value="{{id}}">
                        </div>
                        <div class="col s6">
                            <input name="mobile" type="tel" class="validate" value="{{mobile}}">

                        </div>
                    </div>
                    <input name='id' value='{{this.id}}' type='hidden'>
                    <button class="waves-effect waves-light btn" type="Submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
    {{/each}} {{/if}} {{#unless admin}} {{#each User}}
    <div class="col m4">
        <div class="card small">
            <div class="card-content">
                <span class="card-title greytext text-darken-3">{{first_name}} {{last_name}}</span>
                <p>Email: {{email}}</p>
                <p>Mobile: {{mobile}}</p>
                <p>Employee Id: {{empID}}</p>
                <p>Hospital: {{Partner.location}}</p>
                <p>Call Status: {{Status.status}}</p>

            </div>
        </div>
    </div>
    {{/each}} {{/unless}}

</div>