<form class="col s12" action='/vacation' method='POST'>
    <div class="row page-label">
        <div class="col s12 l8 offset-l2">
            <br> <br>
      
            <h4>Vacay Requay</h4>
            <div class="row">
                <div class="input-field col s12 l8 offset-l2">
                    <div class="row">
                        <div class="col s6">
                            <input class='datepicker' name="start_date" type="date" class="validate" placeholder="start date">
                        </div>
                        <div class="col s6">
                            <input class='datepicker' name="end_date" type="date" class="validate" placeholder="start date">
                        </div>
                        <div class="col s12">
                            <textarea name="comment" class="materialize-textarea" placeholder="Please add additional details"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12 l8 offset-l2">
                    <button class="waves-effect waves-light btn" type="Submit">Submay</button>
                </div>
            </div>
        </div>
    </div>
</form>

<!--insert the table for requests-->
{{#each vacation}}

{{this.start_date}}

{{this.end_date}}
{{this.comment}}
<hr>
{{/each}}
<script>
    $(document).ready(function () {
        $(".datepicker").pickadate({
            selectMonths: true, // Creates a dropdown to control month
            selectYears: 15 // Creates a dropdown of 15 years to control year
        });
    });
</script>