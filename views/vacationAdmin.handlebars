<div class="row page-label">
    <div class="col s12 l8 offset-l2">
        <br> <br>
        <h4>Vacation Requests</h4>

        <div class="row">
            <div class-"col s6">
                {{#each vacation}}
                <div class="card blue-grey lighten-1">
                    <div class="card-content white-text">
                        <span class="card-title">{{status}}</span>
                        <p>User:  </p>
                        <p>Start: {{start_date}}&nbsp&nbsp&nbsp 
                        End: {{end_date}}</p>
                        <p>Comment: {{comment}}</p>
                        <hr>
                        <p>
                            <button class="btn-floating btn-tiny">
                                <i class="material-icons">thumb_up</i>
                            </button>&nbsp&nbsp&nbsp 
                            <button class="btn-floating btn-tiny"><i class="material-icons">thumb_down</i></button> </p>
                    </div>
                </div>
                {{/each}}
            </div>

        </div>  
    </div>
</div>